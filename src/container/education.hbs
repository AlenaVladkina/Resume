{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    {{#with main}}
    <main>
        <section>

            {{>title data="My education" big=true}}
            <ul>
                {{#each education}}
                <li>{{name}}</li>
                {{#if isEnd}}(ще в процесі){{/if}}
                {{/each}}
            </ul>
            <br>
            <hr>
        </section>
        <section>
            <div>
                {{>title data='My certificates' big=true}}
                <ul>
                    {{#each certificates}}

                    <li>{{name}}</li>
                    {{#if id}}({{id}}){{/if}}
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>
