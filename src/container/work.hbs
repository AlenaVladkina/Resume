{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>

            {{>title data="Work history" big=true}}
            <div>
                <p>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                    </li>
                    <br>

                    <div>
                        {{duration.from}} -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}}
                        (досі працюємо)
                        {{/if}}
                    </div>

                    <br>

                    <div>
                        <b>{{#if company.url }}
                            {{>link text=company.name href=company.url
                            blank=true noLine=true }}{{else}}{{company.name}}{{/if}}
                        </b>
                    </div>

                    <br>
                    <br>

                    <div>
                        <strong>Projects {{projectAmount}}</strong>
                    </div>

                    <br>

                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{name}}</div>
                            <br>
                            <div>{{>link text=name href=url blank=true noLine=true}}
                            </div>
                            <br>
                            <div>
                                <p>{{about}}</p>
                            </div>
                            <br>
                            <div>
                                <em>Projects stacks {{stackAmount}}</em>
                            </div>
                            <br>
                            <div>
                                <ul>
                                    {{#each stacks}}
                                    <li>
                                        <p>{{name}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <br>
                            <div>
                                <em>Projects awards</em>
                            </div>
                            <br>
                            <div>
                                <ul>
                                    {{#each awards}}
                                    <li>
                                        <p>{{name}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>


                        </li>
                        {{/each}}
                    </ul>

                    {{/each}}
                </ul>
                </p>
            </div>
        </section>

        <section>
            <div>
                {{>title data=experience.title big=false}}
            </div>
            <div>
                <p>
                    {{#with experience}}
                    {{text}}
                    {{/with}}
                </p>
            </div>
        </section>
    </main>
    {{/with}}
</div>
